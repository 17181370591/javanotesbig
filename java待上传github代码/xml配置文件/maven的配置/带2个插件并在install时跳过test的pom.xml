<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<!-- 这么导入的话，myeclipse里显示项目名字是m2，
		用myeclipse的tomcat运行的话，Context root是m1，
		即路径是http://localhost:8080/m1/ 。
		由于name和description可以不写，所以估计最好不写。
		groupId类似本项目的包，artifactId是项目名，即cn.itcast.maven.m1，
		这个项目在src.main.java下。下面dependency的类似，不过实在仓库里。-->
	<modelVersion>4.0.0</modelVersion>
	<groupId>cn.itcast.maven</groupId>
	<artifactId>m1</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<!--<name>m2</name>
	<description>m3</description>-->
	
	
	<!-- 添加servlet-api，jsp-api -->
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.9</version>
			<scope>test</scope>
		</dependency>


		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	
	<build>
		<!-- 配置了很多插件 -->
		<plugins>
			<plugin>	
			<!-- 用来指定使用maven-compiler-plugin插件可以指定项目源码的jdk版本，
			编译后的jdk版本，以及编码。 -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
			
		<pluginManagement>
			<plugins>
				<plugin>		<!-- 可以使用maven的tomcat7 -->
					<groupId>org.apache.tomcat.maven</groupId>
					<artifactId>tomcat7-maven-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<port>9090</port>
						
						<!-- 使用<path>/</path>访问项目不用加项目名 -->
						<path>/mgr</path>
						<uriEncoding>UTF-8</uriEncoding>
						<server>tomcat7</server>
					</configuration>
				</plugin>
				
								
				<plugin> 
					<groupId>org.apache.maven.plugins</groupId> 
					<artifactId>maven-surefire-plugin</artifactId> 
					<configuration> 
					  <skip>true</skip> 
					</configuration> 
			    </plugin> 
			</plugins>
		</pluginManagement>			
	</build>
</project>

